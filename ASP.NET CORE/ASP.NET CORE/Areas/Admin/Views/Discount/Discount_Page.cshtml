@model List<ASP.NET_CORE.DATA.Entities.Discount>
@{
    ViewData["Title"] = "Discount_Page";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Public/Admin/css/table.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
}

    <section class="recent" style="margin-left:20px;">
        <div class="activity-grid">
            <div class="activity-card">
                <div class="activity-header">
                    <h3>Danh sách sản phẩm</h3>
                    <div class="activity-more">
                        <span class="ti-plus"></span>
                        <a href="@Url.Action("Create_Discount","Discount")">Thêm mã giảm giá</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Giá trị</th>
                                <th>Ngày bắt đầu</th>
                                <th>Này kết thúc</th>
                                <th>Trạng thái</th>
                                <th>Chi tiết</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model.Count > 0 && Model !=null){
                                var stt = 0;
                                foreach(var i in Model){
                                stt++;
                                <tr data-id="@i.Id" class="tr">
                                    <td>@stt </td>
                                    <td>-@i.Value%</td>
                                    <td>@i.StartTime</td>
                                    <td>@i.EndTime</td>
                                    <td>@i.Status</td>
                                    <td>
                                        <a href="@Url.Action("Discount_Edit","Discount", new {id = i.Id})" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                    </td>
                                    <td>
                                        <a onclick="return confirm('Bạn có chắc chắn muốn xóa')" href="#">Delete</a>
                                    </td>
                                </tr>
                                }
                            }
                    </table>
                </div>
            </div>
        </div>
</section>

@section scripts{
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
}

