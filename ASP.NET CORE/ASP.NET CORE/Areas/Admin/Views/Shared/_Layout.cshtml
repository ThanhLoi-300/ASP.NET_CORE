                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Category_List","Category")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Thể loại</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Product_List","Product")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Sản phẩm</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!--Order-->
                        <li class="nav-item">
                            <a href="@Url.Action("Order_Manage","Order")" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>Quản lý đơn hàng</p>
                            </a>
                        </li>

                        <!--Discount-->
                        <li class="nav-item">
                            <a href="@Url.Action("Discount_Page","Discount")" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>Giảm giá</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("LogOut","Login")" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p>Đăng xuất</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <div id="warning">abc</div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 3.2.0
            </div>
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>


    <script src="~/Public/plugins/jquery/jquery.min.js"></script>
    <script src="~/Public/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Public/dist/js/adminlte.min.js"></script>
    <script src="~/Public/dist/js/demo.js"></script>
    @RenderSection("scripts", required:false)
    <script>
        function warning() {
            let warning = "@((string)ViewBag.message)";
            let icon = '';
            let title = '';
            let text = '';
            if (warning == "success") {
                    icon = 'success'
                    title = 'Congratulation!!!!'
                    text = 'Thành công'
            } else if (warning == "error") {
                    icon = 'warning'
                    title = 'Oosp. Fail!!!'
                    text = 'Thêm thất bại. Vui lòng kiểm tra lại đầy dủ thông tin'
            } else if (warning == "name") {
                    icon = 'warning'
                    title = 'Oosp. Fail!!!'
                    text = 'Tên sản phẩm đã tồn tại'
            } else if (warning == "Img") {
                icon = 'warning'
                title = 'Oosp. Fail!!!'
                text = 'Vui lòng chọn ảnh'
            } else if (warning == "quantity") {
                icon = 'warning'
                title = 'Oosp. Fail!!!'
                text = 'Số lượng phải >=0'
            } else if (warning == "price") {
                icon = 'warning'
                title = 'Oosp. Fail!!!'
                text = 'Giá phải >= 1000'
            }else if (warning == "login fail") {
                icon = 'warning'
                title = 'Oosp. Fail!!!'
                text = 'Sai tài khoản hoặc mật khẩu'
            } else if (warning == "value invalid") {
                icon = 'warning'
                title = 'Oosp. Fail!!!'
                text = 'Giá trị 1 --> 90'
            }else if (warning == "value existed") {
                icon = 'warning'
                title = 'Oosp. Fail!!!'
                text = 'Giá trị đã tồn tại'
            }

            if(icon != '' && title != '' && text !='')
                Swal.fire({
                    icon: icon,
                    title: title,
                    text: text
                })
        }
        warning()
    </script>
    @RenderSection("footer", required: false)
</body>
</html>


