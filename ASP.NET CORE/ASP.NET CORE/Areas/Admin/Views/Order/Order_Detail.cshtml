							<thead>
								<tr>
									<th>Đơn hàng: @stt_order</th>
									<th colspan="2">Account: @ViewBag.Account</th>
									<th colspan="5">Ngày đặt: @item.OrderTime</th>
									<th colspan="2" class="toggle">Xem chi tiết</th>
								</tr>
							</thead>
						</table>
