									<th>Tên khách hàng</th>
									<th>Ảnh</th>
									<th>Tên</th>
									<th>Size</th>
									<th>Giá</th>
									<th>Số lượng</th>
									<th>Thành tiền</th>
									<th>Địa chỉ</th>
									<th>Tình trạng</th>
								</tr>
							</thead>
							<tbody>
								@{
									var stt_Detail = 0;
								}
