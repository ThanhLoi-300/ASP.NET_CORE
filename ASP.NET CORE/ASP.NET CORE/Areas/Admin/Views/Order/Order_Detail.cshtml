			@if (ViewBag.Status == 0)
			{
				<h2>ĐƠN HÀNG ĐANG CHỜ XÁC NHẬN</h2>
				if (Model != null && Model.Count > 0)
				{
					var stt_order = 0;

					foreach (var item in Model.Where(a => a.Status == 0).ToList())
