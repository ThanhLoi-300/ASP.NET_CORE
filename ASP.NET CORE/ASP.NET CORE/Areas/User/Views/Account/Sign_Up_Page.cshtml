@model ASP.NET_CORE.Areas.User.Models.RegisterModel;

@{
    ViewData["Title"] = "Sign_Up_Page";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

@section css{
    <link rel="stylesheet" href="~/Public/User/css/dangnhap.css">
}

<section>
    <div class="app">
        <div class="grid wide">
            <div class="app_content-all">
                <div class="row">
                    <div class="auth__form-header">
                        <h2>ĐĂNG KÝ</h2>
                    </div>
                </div>
                <form action="" method="post" class="auth__form-form">
                    @using (Html.BeginForm("Sign_Up_Page", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col c-6">
                                <div class="auth__form">
                                    <div class="auth__form-container">
                                        <div class="auth__form-container-title">Thông tin khách hàng</div>
                                        <div class="row">
                                            <div class="auth__form-group col c-6 ">
                                                <div class="auth__form-group-title">
                                                    <span>Họ và tên</span>
                                                    <span style="color: red;">*</span>
                                                </div>
                                                @Html.TextBoxFor(temp => temp.Name, new { @placeholder = "Nhập họ và tên", @class = "auth__form-input" })
                                                @Html.ValidationMessageFor(temp => temp.Name, "", new { @class = "text-danger", style = "color:red;" })
                                            </div>
                                            <div class="auth__form-group col c-6">
                                                <div class="auth__form-group-title">
                                                    <span>Email</span>
                                                    <span style="color: red;">*</span>
                                                </div>
                                                @Html.TextBoxFor(temp => temp.Email, new { @placeholder = "Nhập địa chỉ email", @class = "auth__form-input" })
                                                @Html.ValidationMessageFor(temp => temp.Email, "", new { @class = "text-danger", style = "color:red;" })
                                            </div>
                                            <div class="auth__form-group col c-6">
                                                <div class="auth__form-group-title">
                                                    <span>Số điện thoại</span>
                                                    <span style="color: red;">*</span>
                                                </div>
                                                @Html.TextBoxFor(temp => temp.Sdt, new { @placeholder = "Nhập số điện thoại", @class = "auth__form-input" })
                                                @Html.ValidationMessageFor(temp => temp.Sdt, "", new { @class = "text-danger", style = "color:red;" })
                                            </div>
                                            <div class="auth__form-group col c-6">
                                                <div class="auth__form-group-title">
                                                    <span>Giới tính</span>
                                                    <span style="color: red;">*</span>
                                                </div>
                                                @Html.TextBoxFor(temp => temp.Sex, new { @placeholder = "Nhập giới tính", @class = "auth__form-input" })
                                                @Html.ValidationMessageFor(temp => temp.Sex, "", new { @class = "text-danger", style = "color:red;" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="auth__form-group col c-12">
                                                <div class="auth__form-group-title">
                                                    <span>Địa chỉ</span>
                                                    <span style="color: red;">*</span>
                                                </div>
                                                @Html.TextAreaFor(temp => temp.Address, new { @name = "address", @id = "", @cols = "30", @rows = "10" })
                                                @Html.ValidationMessageFor(temp => temp.Address, "", new { @class = "text-danger", style = "color:red;" })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col c-6">
                                <div class="auth__form-container-title">Thông tin đăng ký</div>
                                <div class="row">
                                    <div class="auth__form-group col c-12 ">
                                        <div class="auth__form-group-title">
                                            <span>Tên đăng nhập</span>
                                            <span style="color: red;">*</span>
                                        </div>
                                        @Html.TextBoxFor(temp => temp.Account, new { @placeholder = "Nhập tên đăng nhập", @class = "auth__form-input" })
                                        @Html.ValidationMessageFor(temp => temp.Account, "", new { @class = "text-danger", style = "color:red;" })
                                    </div>
                                    <div class="auth__form-group col c-12 ">
                                        <div class="auth__form-group-title">
                                            <span>Mật khẩu</span>
                                            <span style="color: red;">*</span>
                                        </div>
                                        @Html.PasswordFor(temp => temp.Password, new { @placeholder = "Nhập mật khẩu", @class = "auth__form-input" })
                                        @Html.ValidationMessageFor(temp => temp.Password, "", new { @class = "text-danger", style = "color:red;" })
                                    </div>
                                    <div class="auth__form-group col c-12 ">
                                        <div class="auth__form-group-title">
                                            <span>Nhập lại mật khẩu</span>
                                            <span style="color: red;">*</span>
                                        </div>
                                        @Html.PasswordFor(temp => temp.ConfirmPassword, new { @placeholder = "Nhập mật khẩu", @class = "auth__form-input" })
                                        @Html.ValidationMessageFor(temp => temp.ConfirmPassword, "", new { @class = "text-danger", style = "color:red;" })
                                    </div>
                                </div>
                                <div class="baoloi">
                                </div>
                                <input type="submit" name="submit" value="Đăng ký" class="btn btn-login mt-16">
                                <div style="text-align: right ; padding: 15px 0;">
                                    <a href="login.php" style="color: #221f20;font-family: var(--font-family-sans-serif);margin: 24px;">Đăng nhập</a>
                                </div>

                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</section>
