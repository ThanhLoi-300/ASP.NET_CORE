@model ASP.NET_CORE.Areas.Users.Models.LoginModel;
@{
    ViewData["Title"] = "Login_Page";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

@section css{
    <link rel="stylesheet" href="~/Public/User/css/dangnhap.css">
}

<section>
    <div class="app">
        <div class="grid wide">
            <div class="app_content-all">

                @using (Html.BeginForm("Login_Page", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))

                {

                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="fix-content col c-5">
                            <div class="auth__form">
                                <div class="auth__form-container">
                                    <div class="form-container-title">
                                        Bạn đã có tài khoản MLL
                                        <p>
                                            Nếu bạn đã có tài khoản, hãy đăng nhập để tích lũy điểm
                                            thành viên và nhận được những ưu đãi tốt hơn!
                                        </p>
                                    </div>
                                    <div class="row">
                                        <div class="auth__form-group1 col c-12 ">
                                            @*<input type="text" name="username" class="auth__form-input" placeholder="Tên đăng nhập" asp-for="Username">*@
                                            @Html.TextBoxFor(temp => temp.Username, new { @placeholder = "Tên đăng nhập", @class = "auth__form-input" })
                                            @Html.ValidationMessageFor(temp => temp.Username, "", new { @class = "text-danger", style = "color:red;" })
                                        </div>
                                        <div class="auth__form-group1 col c-12">
                                            @*<input type="password" name="password" class="auth__form-input" placeholder="Mật khẩu" asp-for="Password">*@
                                            @Html.TextBoxFor(temp => temp.Password, new { @placeholder = "Mật khẩu", @class = "auth__form-input" })
                                            @Html.ValidationMessageFor(temp => temp.Password, "", new { @class = "text-danger", style = "color:red;" })

                                        </div>
                                    </div>
                                    <div style="text-align: right;">
                                        <a href="quenMatKhau.php" style="font-family: var(--font-family-monospace);color: #221f20;">Quên mật khẩu</a>
                                    </div>
                                    @*<label>
                                                                                <input type="checkbox" asp-for="KeepLoggedIn" />
                                        Keep me logged In.
                                                                                </label>*@
                                    <div class="baoloi">

                                    </div>
                                    <input type="submit" name="submit" value="Đăng nhập" class="btn btn-login mt-16">
                                </div>
                            </div>
                        </div>
                        <div class="col c-2">
                            <div class="auth-row">
                            </div>
                        </div>
                        <div class="col c-5">
                            <div class="auth__form">
                                <div class="auth__form-container">
                                    <div class="form-container-title">
                                        Khách hàng mới của MLL
                                        <p>
                                            Nếu bạn chưa có tài khoản trên mll.com, hãy sử dụng tùy chọn này để truy cập biểu mẫu đăng ký.
                                            Bằng cách cung cấp cho IVY moda thông tin chi tiết của bạn, quá trình mua hàng trên ivymoda.com sẽ là một trải nghiệm thú vị và nhanh chóng hơn!
                                        </p>
                                    </div>
                                    <div class="btn-login1">
                                        <a href="@Url.Action("Sign_Up_Page", "Account")">Đăng ký </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
</section>